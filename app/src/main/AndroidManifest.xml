            android:name=".EditProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".BodyRates"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ProgramOverviewActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MyProgramsActivity"
