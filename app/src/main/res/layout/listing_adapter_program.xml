<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView
        android:id="@+id/listingImage"
        android:layout_width="@dimen/listingImageWidth"
        android:layout_height="@dimen/listingImageHeight"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="10dp"
        app:srcCompat="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">


        <TextView
            android:id="@+id/listingTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/listingTextMarginBottom"
            android:text="Title"
            android:textColor="@color/primary_text"
            android:textSize="16sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/listingPublishedTextview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#ff9900"
                        android:padding="2dp"
                        android:text="Not Published"
                        android:textColor="#fff"
                        android:textSize="10dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/listingBannedTextview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/colorRedDark"
                        android:padding="2dp"
                        android:text="Banned"
                        android:textColor="#fff"
                        android:textSize="11dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/listingDownloadedTextview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/colorGreen"
                        android:padding="2dp"
                        android:text="Downloaded"
                        android:textColor="#fff"
                        android:textSize="11dp"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/listingPriceLinearLayout">

                    <ImageView

                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginRight="5dp"
                        app:srcCompat="@drawable/coin_icon" />

                    <TextView
                        android:id="@+id/listingPriceTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5/7" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <ImageView

                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginRight="5dp"
                        app:srcCompat="@drawable/ic_star" />

                    <TextView
                        android:id="@+id/listingRatingTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5/7" />

                    <ImageView
                        android:layout_width="15dp"

                        android:layout_height="15dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        app:srcCompat="@drawable/comment" />

                    <TextView
                        android:id="@+id/listingCommentTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/listingDifficulty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginBottom="@dimen/listingTextMarginBottom"
                    android:text="Hardness"
                    android:textColor="@color/secondary_text" />

                <TextView
                    android:id="@+id/listingCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginBottom="@dimen/listingTextMarginBottom"
                    android:text="Category"
                    android:textColor="@color/secondary_text" />

                <TextView
                    android:id="@+id/listingProgramTrainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="Trainer"
                    android:textColor="@color/colorAccent" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>